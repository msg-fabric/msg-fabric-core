
#IF PLAT_NODEJS
  import { randomBytes } from 'node:crypto'

  export function random_base64(n) ::
    return randomBytes(n).toString('base64')


#IF PLAT_WEB
  import {u8_to_base64} from 'u8-utils/esm/web/base64.js'

  export function random_base64(n) ::
    return u8_to_base64 @
      crypto.getRandomValues(new Uint8Array(n))

